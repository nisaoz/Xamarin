<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ders2.Views.ThemePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Style="{DynamicResource DefaultStackLayout}">
                <Label Style="{DynamicResource DefaultTitle}" Text="Açık Akademi"></Label>
                <Editor Style="{DynamicResource DefaultContent}"></Editor>
                <Button Style="{DynamicResource DefaultButton}" Text="Tema Değiştir" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>