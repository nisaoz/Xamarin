<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ders4.Views.InsertPage">
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Öğrenci Ekle">
                    <EntryCell Label="Adınız: " x:Name="txt_Name"></EntryCell>
                    <EntryCell Label="Soyadınız: " x:Name="txt_Surname"></EntryCell>
                    <ViewCell>
                        <Button x:Name="btn_ekle" Text="Ekle" Clicked="btn_ekle_Clicked"></Button>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>